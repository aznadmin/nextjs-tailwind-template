# To install Turbo
sudo npm install turbo --global
pnpm dlx create-turbo@latest

# Add tailwindcss to a repo
npx tailwindcss init

# To add packages to npm for references
npm init
npm adduser
npm publish --access public

# Install local packages
cd main/web
pnpm install --save ../../packages/ui
pnpm install --save ../../packages/common
pnpm install --save ../../packages/shared-data